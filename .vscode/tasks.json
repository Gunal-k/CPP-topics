{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "& {",
                "$file = '${file}';",
                "$dest = '${workspaceFolder}/c++/1.Datatypes/jspwTest.cpp';",
                "$exe = '${workspaceFolder}/c++/1.Datatypes/jspwTest.exe';",
                "$input = '${workspaceFolder}/c++/1.Datatypes/input.txt';",
                "$output = '${workspaceFolder}/c++/1.Datatypes/output.txt';",
                "Copy-Item -Path $file -Destination $dest -Force;",
                "Invoke-Expression \"g++ $dest -o $exe\";",
                "Invoke-Expression \"$exe < $input > $output\";",
                "Remove-Item -Path $exe -Force;",
                "Remove-Item -Path $dest -Force;",
                "}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}